<body>

<%= form_for(@user, :html => {:class => "sign-up"}) do |f| %>
<h1 class="sign-up-title">Sign up in seconds</h1>
<%= f.text_field :firstname, class: 'sign-up-input', placeholder: "What's your First name?" %>
<%= f.text_field :lastname, class: 'sign-up-input', placeholder: "What's your Last name?"%>
<%= f.date_select :birthdate, start_year: 1950, end_year:2005, order: [:month, :day, :year] %>
<%= f.text_field :nickname, class: 'sign-up-input', placeholder: "What's your Nickname?" %>
<%= f.text_field :email, class: 'sign-up-input', placeholder: "What's your Email?" %>
<%= f.text_field :username, class: 'sign-up-input', placeholder: "Pick a Username?" %>
<%= f.password_field :password, class: 'sign-up-input', placeholder: "Shh.. Pick a Password!" %>
<h2>Pick a Profile photo</h2>
<%= f.radio_button :image_url, 'https://img.icons8.com/color/48/000000/segway.png' %> <img src="https://img.icons8.com/color/48/000000/segway.png">
<%= f.radio_button :image_url, 'https://img.icons8.com/color/48/000000/statue-of-liberty.png' %> <img src="https://img.icons8.com/color/48/000000/statue-of-liberty.png">
<%= f.radio_button :image_url, 'https://img.icons8.com/color/48/000000/coconut-cocktail.png' %> <img src="https://img.icons8.com/color/48/000000/coconut-cocktail.png">
<%= f.radio_button :image_url, 'https://img.icons8.com/color/48/000000/cheese.png' %> <img src="https://img.icons8.com/color/48/000000/cheese.png">
<%= f.radio_button :image_url, 'https://img.icons8.com/color/48/000000/sushi.png' %> <img src="https://img.icons8.com/color/48/000000/sushi.png">
<%= f.radio_button :image_url, 'https://img.icons8.com/doodle/48/000000/basketball.png' %> <img src="https://img.icons8.com/doodle/48/000000/basketball.png">
<%= f.radio_button :image_url, 'https://img.icons8.com/color/48/000000/segway.png' %> <img src="https://img.icons8.com/color/48/000000/segway.png">
<h2>Pick a word that describes you!</h2>
<%= f.select( :description1, options_for_select(@description1), { :prompt =>
true } ) %>
<h2>Pick another word that describes you!</h2>
<%= f.select( :description2, options_for_select(@description2), { :prompt =>
true } ) %>
<h2>Okay, Last word that describes you!</h2>
<%= f.select( :description3, options_for_select(@description3), { :prompt =>
true } ) %>
<%= f.text_field :goal, class: 'sign-up-input', placeholder: "Whats Your Goal?" %>
<%= f.submit "Sign up", class: "sign-up-button" %>
<% end %>



